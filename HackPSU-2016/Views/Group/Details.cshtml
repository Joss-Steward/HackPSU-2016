@model HackPSU_2016.Models.Group
@{
    ViewBag.Title = Model.Name;
}

<div class="row">
    <div class="two columns GroupLogo">
        <div></div>
    </div>
    <div class="ten columns GroupInfo">
        <div class="row GroupName">
            <h2>Group Name</h2>
        </div>
        <div class="row GroupDescription">
            Group DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup DescriptionGroup
        </div>
    </div>
</div>

<div class="row GroupSectionHeaders">
    <div class="eight columns">
        <h2><span class="Icon Chat"></span>Chat Window</h2>
    </div>
    <div class="four columns">
        <h2><span class="Icon Users"></span>Members</h2>
    </div>
</div>

<div class="row GroupData">
    <div class="eight columns PlayerChat">
        <div class="row ChatContain" id="chat">
            @foreach(var c in Model.ChatMessages.OrderByDescending(c => c.MessageTime).Take(10)){ 
                <div class="row">
                    <div class="twelve columns">
                        <span></span>
                        @c.Sender.UserName : @c.MessageText
                    </div>
                </div>
            }
            <a id="ChatAnchor"></a>
        </div>
        <div class="ChatInputContain">
            <form id="ChatSubmitForm" action="" method="post">
                <input type="text" id="message" />
                <button type="submit" id="sendmessage">Send</button>
            </form>
        </div>
    </div>
    <div class="four columns PlayerList">
        @foreach(var u in Model.Members.Select(m => m.User)) { 
            <div class="row">            
                <div class="twelve columns">
                    <span></span>
                    @u.UserName
                </div>
            </div>
        } 
    </div>
</div>

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        function FormSubmit(event){
            event.preventDefault();
            $.connection.hub.start().done(function(){
                chat.server.sendChatMessage(@Model.GroupId, $('#message').val());
                $('#message').val('').focus();
                return;
            });
        }

        (function(){
            document.getElementById("ChatSubmitForm").addEventListener("submit", FormSubmit, false);
        })();



        // Add the message to the page.
        //$('#chat').append('<div class="row"><div class="twelve columns"><span></span>'
        //    + htmlEncode(name)
        //    + ': ' + htmlEncode(message) + '</div></div>');

        $(function () {
            // Reference the auto-generated proxy for the hub.
            chat = $.connection.groupChatHub;
            // Create a function that the hub can call back to display messages.
            chat.client.addChatMessage = function (groupid, name, message) {
                var theGroupId = @Model.GroupId;
                if(groupid == theGroupId) {
                    var text = "<div class=\"row\"><div class=\"twelve columns\"><span></span>"+ htmlEncode(name)+ " : " + htmlEncode(message) + "</div></div>";
                    $(text).insertBefore($("#ChatAnchor"));
                    var d = $('#ChatAnchor');
                    d.scrollTop(d.prop("scrollHeight"));
                    //$("#ChatAnchor").focus();
                    //$('#message').val('').focus();
                }
            }
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}