@model IEnumerable<HackPSU_2016.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

@foreach (var item in Model)
{
    <h2>@Html.DisplayFor(modelItem => item.UserName)</h2>
}

@foreach (var item in Model)
{

    <div class="row text">
        <div class="twelve columns">
            <h3>Basic Information</h3>
        </div>
        <div class="twelve columns">
            @Html.DisplayNameFor(model => model.Email): @Html.DisplayFor(modelItem => item.Email), Confirmed: @Html.DisplayFor(modelItem => item.EmailConfirmed)
        </div>
        <div class="row"></div>
        <div class="twelve columns">
            <h3>Gamer Profile</h3>
        </div>
        <div class="twelve columns">
            @Html.DisplayNameFor(model => model.Skill): @Html.DisplayFor(modelItem => item.Skill)
        </div>
        <div class="twelve columns">
            @Html.DisplayNameFor(model => model.Playstyle): @Html.DisplayFor(modelItem => item.Playstyle)
        </div>
        <div class="twelve columns">
            @Html.DisplayNameFor(model => model.CommunicationsPlatform): @Html.DisplayFor(modelItem => item.CommunicationsPlatform)
        </div>
        <div class="row"></div>
        <div class="twelve columns">
            <h3>Availability</h3>
        </div>
        <div class="twelve columns">
            @Html.DisplayNameFor(model => model.AvailableFrom): @Html.DisplayFor(modelItem => item.AvailableFrom)
        </div>
        <div class="twelve columns">
            @Html.DisplayNameFor(model => model.AvailableTill): @Html.DisplayFor(modelItem => item.AvailableTill)
        </div>
        <div class="row"></div>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </div>
}

</table>
